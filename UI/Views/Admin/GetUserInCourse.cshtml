
@{
    ViewData["Title"] = "GetUserInCourse";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    int id = ViewBag.id;
    int Number = 1;
}
@inject BLL.Interface.IUserCourseRep user

<style>
    label{
            color: cadetblue;
    }
</style>
    <div class="breadcrumbs">
        <div class="breadcrumbs-inner">
            <div class="row m-0">
                <div class="col-sm-4">
                    <div class="page-header float-left">
                        <div class="page-title">
                            <h1>Dashboard</h1>
                        </div>
                    </div>
                </div>
                <div class="col-sm-8">
                    <div class="page-header float-right">
                        <div class="page-title">
                            <ol class="breadcrumb text-right">
                                <li><a href="/Admin/Index">Dashboard</a></li>
                                <li class="active"> User In Course </li>
                            </ol>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

     <div class="content">
       <div class="animated fadeIn">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header" style=" display: flex; justify-content: space-between;">
                            <strong class="card-title">All Student Table</strong>
                           
                        </div>
                        <div class="card-body">
                            <table id="tblSlider"  class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        
                                        <th>#</th>
                                        <th>Email</th>
                                       <th>Name</th>
                                       <th>Countery</th>

                                       <th>phone</th>
                                       <th>Date of start</th>
                                       <th>Remove</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in await user.GetUserinCourses(id))
                                   {
                                       <tr>
                                        <th>@Number</th>
                                        <th>@item.Email</th>
                                        <th>@item.name</th>
                                        <th>@item.Cuntery</th>
                                        <th>@item.phone</th>
                                         <th>@item.Date</th>

                                        <th>  <a onclick="Delete(@item.id)" class="col-4 btn delete m-0 p-1 p-1" data-bs-toggle="tooltip" data-bs-placement="top" title="Delete">
                                <i style="color: red;" class="fa-solid fa-trash-can"></i>
                                                                               </a>
                            </th>


                                     
                                    </tr>
                                    Number++;
                                   }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div><!-- .animated -->
  </div>
 

<script src="~/js/jquery/jquery.min.js"></script>
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

<script>
$(document).ready(function () {
    $('#tblSlider').DataTable();
});
                
 function Delete(id) {
        swal({
            title: `Are you sure you want to delete this record?`,
            text: "If you delete this, it will be gone forever.",
            icon: "warning",
            buttons: true,
            dangerMode: true,
        })
            .then((willDelete) => {
                if (willDelete) {
                    $.ajax({

                        type: "POST",
                        url: "/Admin/DeleteUserFromCourse",
                        data: {
                            id: id,

                        },

                        success: function (res) {

                            swal("Deleted!", "Your imaginary file has been archived.", "success");
                           location.reload();

                        }

                    });
                }
            });
    }
</Script>



