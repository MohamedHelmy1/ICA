@model DAL.ViewModel.LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link rel="stylesheet" href="~/css/style.css">

    <link rel="icon" href="">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-0evHe/X+R7YkIZDRvuzKMRqM+OrBnVFBL6DOitfPri4tjfHxaWutUpFmBp4vmVor" crossorigin="anonymous">
    <link rel="icon" href="~/pics/logo.jpeg">
    <!-- First font -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Smooch&display=swap" rel="stylesheet">
    <!-- Body font -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Lobster&display=swap" rel="stylesheet">
  </head>


<body>

  <center><h1 id="ica">International Concept Academy</h1> <img id="icalogo" src="~/pics/logo.jpeg"></center>

  <main>
  <form asp-action="Login">

   <div id="login">
            
        <div style="text-align:center;" asp-validation-summary="ModelOnly" class="col-sm-10 text-danger"></div>

    <div class="mb-3 row">
        <label for="staticEmail" class="col-sm-2 col-form-label text-white">Email:</label>
        <div class="col-sm-10">
          <input type="email" asp-for="Email" class="form-control-plaintext text-white" id="staticEmail" placeholder="email@example.com">

        </div>
        <br />
       <div class="mb-3 row">
        <div col-sm-10>
        <label for="staticEmail" class="col-sm-2 col-form-label text-white"></label>

                <span asp-validation-for="Email" class="text-danger"></span>
          </div>
        </div>
      </div>
      <div class="mb-3 row">
        <label for="inputPassword" class="col-sm-2 col-form-label text-white">Password:</label>
        <div class="col-sm-10">
          <input type="password" asp-for="Passwored" class="form-control" id="inputPassword" placeholder="Password">

        </div>
        <br><br><br>
        <button id="submitlgn" type="submit">Login</button>
        <br /><br />
      
        <a href="/Account/ForgetPassword">Forget Password </a>
      </div>
       <br />
       <div class="mb-3 row">
        <div col-sm-10>
        <label for="staticEmail" class="col-sm-2 col-form-label text-white"></label>

                <span asp-validation-for="Passwored" class="text-danger"></span>
          </div>
        </div>
      </div></form>
      <br><br><br><br><br><br><br><br><br></div>
  </main></center>



  <footer>

    <center><nav class="navbar bg-light">
      <div class="container-fluid">
        <span class="navbar-brand" id="footer">International Concept Academy | Copyright © 2022</span>
      </div>
    </nav></center>

  </footer>
</body>
</html>

<script src="~/lib/jquery/dist/jquery.min.js"></script>

<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
