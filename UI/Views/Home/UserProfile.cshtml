@model IEnumerable<DAL.ViewModel.CoursesViewModel>
@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ICA</title>
    <link rel="stylesheet" href="~/css/profile.css">
    <link rel="icon" href="">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-0evHe/X+R7YkIZDRvuzKMRqM+OrBnVFBL6DOitfPri4tjfHxaWutUpFmBp4vmVor" crossorigin="anonymous">
    <link rel="icon" href="~/pics/logo.jpeg">
    <!-- First font -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Smooch&display=swap" rel="stylesheet">
    <!-- Body font -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Lobster&display=swap" rel="stylesheet">
  </head>


<body>

  <center><h1 id="ica">International Concept Academy</h1> <img id="icalogo" src="~/pics/logo.jpeg"></center>


<main>
    <center><article><br><br>

        <h1 id="mycourses">My Courses</h1>
        <br><br>

        <div id="cards" class="row row-cols-1 row-cols-md-3 g-4">
            @foreach (var item in Model)
           {
               <div class="col">
              <div class="card">
                <img src="~/Image/@item.Image" class="card-img-top">
                <div class="card-body">
                  <h5 class="card-title">@item.Name</h5>
                  <p class="card-text">@item.Description</p>
                </div>
                <center>
                    @if( item.Link==null||item.Link=="")
                    {
                        <p>Next Lecture in </p>
                                        
                                    }
                                    else
                                    {
                                        <a href="@item.Link" id="get" class="btn">Enter the lecture</a>
                                    }
                                </center>
              </div>
            </div>
           }
            
           
          </div>
      
    </article></center>
    <article>

      <center>
        <br><br>
        <h1 id="mycourses">Statistics</h1>
        <br><br>
        
      </center>

    </article>
<br><br>
<footer>

    <center><nav class="navbar bg-light">
      <div class="container-fluid">
        <span class="navbar-brand" id="footer">International Concept Academy | Copyright © 2022</span>
      </div>
    </nav></center>

  </footer>
</main>



    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-pprn3073KE6tl6bjs2QrFaJGz5/SUsLqktiwsUTF55Jfv3qYSDhgCecCxMW52nD2" crossorigin="anonymous"></script>
</body>